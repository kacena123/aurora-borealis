<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upravujete si personalizovanú notifikáciu na zmenu teploty pre konkrétne pole. Zadajte počet hodín, o ktoré chcete byť upozornení pred poklesom teploty pod hranicu, ktorú si zvolíte."
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/textpole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Čas: "
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>

            <NumberPicker
                android:id="@+id/pickerhodiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hodín"
                android:textSize="18dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teptota: "
                android:textSize="18dp"
                android:layout_marginRight="10dp"/>

            <NumberPicker
                android:id="@+id/pickerteptota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"/>

        </LinearLayout>


        <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Upravit informacie" />


</LinearLayout>

</LinearLayout>